{
  "name": "indieauth-ep",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon -e js,jsx ./bin/www",
    "start": "NODE_ENV=production node ./bin/www"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "ignorePatterns": [
      "dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wasv/indieauth-ep.git"
  },
  "author": "Billy Stevens <contact@wasv.me> (https://wasv.me)",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/wasv/indieauth-ep/issues"
  },
  "homepage": "https://github.com/wasv/indieauth-ep#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.0",
    "@babel/core": "^7.10.0",
    "@babel/preset-env": "^7.10.0",
    "eslint": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  }
}
